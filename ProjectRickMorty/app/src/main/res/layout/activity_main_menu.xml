<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza_claro">

    <ImageView
        android:id="@+id/logo_main_menu"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:contentDescription="@string/content_description_images"
        android:src="@mipmap/ic_logo_menu_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_botao_personagens"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/botao_arredondado"
        android:text="@string/string_personagens"
        app:layout_constraintBottom_toTopOf="@id/menu_botao_personagens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_main_menu" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_botao_episodios"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/botao_arredondado"
        android:text="@string/string_episodios"
        app:layout_constraintTop_toBottomOf="@id/menu_botao_personagens"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menu_botao_locais"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_botao_locais"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/botao_arredondado"
        android:text="@string/string_locais"
        app:layout_constraintTop_toBottomOf="@id/menu_botao_episodios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>